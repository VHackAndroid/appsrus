<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/externalMargin"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<nl.appsrus.vhack2012.ui.RemoteImageView
        android:id="@+id/profile"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/ic_launcher" />
	
	 <TextView
        android:id="@+id/firstName"
        android:textSize="22dp"
        android:text="Raul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/internalMargin"
        android:layout_marginLeft="@dimen/internalMargin"
        android:layout_toRightOf="@+id/profile"
        android:layout_alignTop="@+id/profile" />
    
	<TextView
        android:id="@+id/lastName"
        android:textSize="22dp"
        android:text="Portales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/internalMargin"
        android:layout_toRightOf="@+id/profile"
        android:layout_below="@+id/firstName" />
</RelativeLayout>